<%- model_class = Movie -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<%= will_paginate %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:movie_title) %></th>
      <th><%= model_class.human_attribute_name(:release_date) %></th>
      <th><%= model_class.human_attribute_name(:imdb_url) %></th>
      <th>Genres:</th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to movie.id, movie_path(movie) %></td>
        <td><%= movie.movie_title %></td>
        <td><%= movie.release_date %></td>
        <td><%= link_to movie.movie_title, movie.imdb_url, {:target => :_blank} %></td>
        <td>
          <% if movie.action? %>
            <span class="label"><%= model_class.human_attribute_name(:action) %></span>
          <% end %>
          <% if movie.adventure%>
            <span class="label"><%= model_class.human_attribute_name(:adventure) %></span>
          <% end %>
          <% if movie.animation%>
            <span class="label"><%= model_class.human_attribute_name(:animation) %></span>
          <% end %>
          <% if movie.children%>
            <span class="label"><%= model_class.human_attribute_name(:children) %></span>
          <% end %>
          <% if movie.comedy%>
            <span class="label"><%= model_class.human_attribute_name(:comedy) %></span>
          <% end %>
          <% if movie.crime%>
            <span class="label"><%= model_class.human_attribute_name(:crime) %></span>
          <% end %>
          <% if movie.documentary%>
            <span class="label"><%= model_class.human_attribute_name(:documentary) %></span>
          <% end %>
          <% if movie.drama%>
            <span class="label"><%= model_class.human_attribute_name(:drama) %></span>
          <% end %>
          <% if movie.fantasy%>
            <span class="label"><%= model_class.human_attribute_name(:fantasy) %></span>
          <% end %>
          <% if movie.film_noir%>
            <span class="label"><%= model_class.human_attribute_name(:film_noir) %></span>
          <% end %>
          <% if movie.horror%>
            <span class="label"><%= model_class.human_attribute_name(:horror) %></span>
          <% end %>
          <% if movie.musical%>
            <span class="label"><%= model_class.human_attribute_name(:musical) %></span>
          <% end %>
          <% if movie.mystery%>
            <span class="label"><%= model_class.human_attribute_name(:mystery) %></span>
          <% end %>
          <% if movie.romance%>
            <span class="label"><%= model_class.human_attribute_name(:romance) %></span>
          <% end %>
          <% if movie.sci_fi%>
            <span class="label"><%= model_class.human_attribute_name(:sci_fi) %></span>
          <% end %>
          <% if movie.thriller%>
            <span class="label"><%= model_class.human_attribute_name(:thriller) %></span>
          <% end %>
          <% if movie.war%>
            <span class="label"><%= model_class.human_attribute_name(:war) %></span>
          <% end %>
          <% if movie.western%>
            <span class="label"><%= model_class.human_attribute_name(:western) %></span>
          <% end %></td>
        <td><%=l movie.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_movie_path(movie), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      movie_path(movie),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_movie_path,
            :class => 'btn btn-primary' %>
