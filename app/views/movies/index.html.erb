<%- model_class = Movie -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:movie_title) %></th>
      <th><%= model_class.human_attribute_name(:release_date) %></th>
      <th><%= model_class.human_attribute_name(:video_release_date) %></th>
      <th><%= model_class.human_attribute_name(:imdb_url) %></th>
      <th><%= model_class.human_attribute_name(:unknown) %></th>
      <th><%= model_class.human_attribute_name(:action) %></th>
      <th><%= model_class.human_attribute_name(:adventure) %></th>
      <th><%= model_class.human_attribute_name(:animation) %></th>
      <th><%= model_class.human_attribute_name(:children) %></th>
      <th><%= model_class.human_attribute_name(:comedy) %></th>
      <th><%= model_class.human_attribute_name(:crime) %></th>
      <th><%= model_class.human_attribute_name(:documentary) %></th>
      <th><%= model_class.human_attribute_name(:drama) %></th>
      <th><%= model_class.human_attribute_name(:fantasy) %></th>
      <th><%= model_class.human_attribute_name(:film_noir) %></th>
      <th><%= model_class.human_attribute_name(:horror) %></th>
      <th><%= model_class.human_attribute_name(:musical) %></th>
      <th><%= model_class.human_attribute_name(:mystery) %></th>
      <th><%= model_class.human_attribute_name(:romance) %></th>
      <th><%= model_class.human_attribute_name(:sci_fi) %></th>
      <th><%= model_class.human_attribute_name(:thriller) %></th>
      <th><%= model_class.human_attribute_name(:war) %></th>
      <th><%= model_class.human_attribute_name(:western) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to movie.id, movie_path(movie) %></td>
        <td><%= movie.movie_title %></td>
        <td><%= movie.release_date %></td>
        <td><%= movie.video_release_date %></td>
        <td><%= movie.imdb_url %></td>
        <td><%= movie.unknown %></td>
        <td><%= movie.action %></td>
        <td><%= movie.adventure %></td>
        <td><%= movie.animation %></td>
        <td><%= movie.children %></td>
        <td><%= movie.comedy %></td>
        <td><%= movie.crime %></td>
        <td><%= movie.documentary %></td>
        <td><%= movie.drama %></td>
        <td><%= movie.fantasy %></td>
        <td><%= movie.film_noir %></td>
        <td><%= movie.horror %></td>
        <td><%= movie.musical %></td>
        <td><%= movie.mystery %></td>
        <td><%= movie.romance %></td>
        <td><%= movie.sci_fi %></td>
        <td><%= movie.thriller %></td>
        <td><%= movie.war %></td>
        <td><%= movie.western %></td>
        <td><%=l movie.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_movie_path(movie), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      movie_path(movie),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_movie_path,
            :class => 'btn btn-primary' %>
